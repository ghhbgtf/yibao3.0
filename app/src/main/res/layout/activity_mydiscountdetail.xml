<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context="com.zju.yibao.MYDISCOUNTDETAIL">

    <include layout="@layout/toolbar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/tv_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="(课程名)的优惠码"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_discountCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_default"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:singleLine="true"
            android:text="666666"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="优惠劵使用说明:"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingBottom="40dp"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/background_scrollbar">

        <TextView
            android:id="@+id/tv_discountUseInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.5"
            android:paddingBottom="100dp"
            android:text="balabala" />
    </ScrollView>
</LinearLayout>
